<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/topSpeed"
                    style="@style/ColorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/best"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="@dimen/_70sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/ColorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/best"
                    android:padding="@dimen/_2sdp"
                    android:text="TOP SPEED"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/ColorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/best"
                    android:padding="@dimen/_2sdp"
                    android:text="KM/H"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".7"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/avg"
                            style="@style/ColorTheme"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/best"
                            android:gravity="right"
                            android:text="000"
                            android:textSize="@dimen/_30sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ColorTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/best"
                            android:padding="@dimen/_2sdp"
                            android:text="AVG"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/ColorTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/best"
                            android:padding="@dimen/_2sdp"
                            android:text="KM/H"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".7"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/totalRun"
                            style="@style/ColorTheme"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/best"
                            android:gravity="right"
                            android:text="000"
                            android:textSize="@dimen/_30sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ColorTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/best"
                            android:padding="@dimen/_2sdp"
                            android:text="RUN"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/ColorTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/best"
                            android:padding="@dimen/_2sdp"
                            android:text="KM/H"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/checkSpeedTime"
                    style="@style/ColorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/best"
                    android:gravity="center"
                    android:text="00:00:00"
                    android:textSize="@dimen/_20sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/ColorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/best"
                    android:padding="@dimen/_2sdp"
                    android:text="Time"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/_minus40sdp"
                android:id="@+id/checkSpeedAndTime"
                style="@style/ColorTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/best"
                android:gravity="center"
                android:text="000"
                android:textSize="@dimen/_180sdp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        style="@style/ColorTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:fontFamily="@font/best"
        android:padding="@dimen/_2sdp"
        android:text="SPEED"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />
    <TextView
        android:layout_marginBottom="@dimen/_35sdp"
        style="@style/ColorTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:fontFamily="@font/best"
        android:padding="@dimen/_2sdp"
        android:text="KM/H"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />
</FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageCar"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#000000"
                    android:scaleType="centerCrop"
                    android:src="@drawable/blackeee"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/checkSpeedAddress"
                    style="@style/ColorTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="4"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/background_4"
                    android:fontFamily="@font/best"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:minWidth="@dimen/_160sdp"
                    android:padding="@dimen/_10sdp"
                    android:text="Lat:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lat"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/background_4"
                    android:fontFamily="@font/best"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:minWidth="@dimen/_160sdp"
                    android:padding="@dimen/_10sdp"
                    android:text="Lon:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/acc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_toRightOf="@+id/lat"
                    android:background="@drawable/background_4"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:fontFamily="@font/best"
                    android:minWidth="@dimen/_160sdp"
                    android:padding="@dimen/_10sdp"
                    android:text="Accuracy :"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_toRightOf="@+id/lot"
                    android:background="@drawable/background_4"
                    android:fontFamily="@font/best"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:minWidth="@dimen/_160sdp"
                    android:padding="@dimen/_10sdp"
                    android:text="Altitude:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/working"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="Working on:"
                    android:textColor="#0BB2B9" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>